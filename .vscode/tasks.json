{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C File",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "main.c",
                "communication.c",
                "parsers.c",
                "utils.c",
                "-o",
                "${workspaceRoot}\\monitoring.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run C File",
            "type": "shell",
            "command": ".\\monitoring.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}